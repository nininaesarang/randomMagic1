<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_chat">

    <!-- 1. RecyclerView para la lista de mensajes (ocupa la mayor parte del espacio) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewChat"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/layoutInput"
        tools:listitem="@layout/item_message_me"
        app:stackFromEnd="true"
        app:reverseLayout="false"/>

    <!-- 2. Contenedor inferior para la entrada de texto y el botón de enviar -->
    <LinearLayout
        android:id="@+id/layoutInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#F0F0F0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Campo de texto (EditText) para escribir el mensaje -->
        <EditText
            android:id="@+id/etMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Escribe tu mensaje..."
            android:padding="12dp"
            android:background="@drawable/rounded_edittext"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLines="4"
            android:minHeight="48dp"
            android:layout_marginEnd="8dp" />

        <!-- Botón de enviar (ImageButton para un icono) -->
        <ImageButton
            android:id="@+id/btnSend"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_send"
            android:contentDescription="Enviar mensaje"
            android:background="@drawable/rounded_button"
            android:tint="@android:color/white"
            android:scaleType="fitCenter" />

    </LinearLayout>

    <!-- Necesitamos un fondo personalizado para el EditText y el botón. -->
    <!-- Creamos placeholders para los drawables necesarios -->

</androidx.constraintlayout.widget.ConstraintLayout>