<?xml version="1.0" encoding="utf-8"?>
<!-- 1. Usamos CardView como el contenedor principal -->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp">

    <!-- 2. Dentro del CardView, usamos un ConstraintLayout para organizar todo -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Imagen del Producto -->
        <ImageView
            android:id="@+id/fotoproducto"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:srcCompat="@tools:sample/backgrounds/scenic" /> <!-- Imagen de muestra -->

        <!-- Nombre del Producto (Más grande y prominente) -->
        <TextView
            android:id="@+id/nombreproducto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/fotoproducto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/precio"
            tools:text="Nombre del Producto" />

        <!-- Precio (Alineado a la derecha, con un color llamativo) -->
        <TextView
            android:id="@+id/precio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/price_red"
            app:layout_constraintBaseline_toBaselineOf="@id/nombreproducto"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="$99.99" />

        <!-- Descripción (Con un texto más sutil) -->
        <TextView
            android:id="@+id/descripcion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="16dp"
            android:textSize="16sp"
            android:maxLines="3"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@+id/nombreproducto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Aquí va una descripción detallada del producto, que puede ser un poco larga y ocupar varias líneas para explicar las características principales." />

        <!-- Categoría (Usando un "Chip" de Material Design para un look moderno) -->
        <com.google.android.material.chip.Chip
            android:id="@+id/categoria"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:clickable="false"
            app:chipBackgroundColor="#9951FF"
            app:layout_constraintTop_toBottomOf="@id/descripcion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="Categoría" />

        <!-- ID del producto (Pequeño y en la esquina, si es necesario mostrarlo) -->
        <TextView
            android:id="@+id/idproducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintBaseline_toBaselineOf="@id/categoria"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="ID: 12345" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
